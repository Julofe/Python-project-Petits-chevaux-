
from tkinter import*
from random import*
fen = Tk()
can=Canvas(fen,width=600,height=600,background='white')
can.pack()
rect=can.create_rectangle(5,5,210,210,fill="yellow")
rect=can.create_rectangle(395,5,600,210,fill="red")
rect=can.create_rectangle(5,395,200,600,fill="green")
rect=can.create_rectangle(395,395,600,600,fill="blue")

def NouveauLance():
    nb = randint(1,6)
    nb2 = randint(1,6)
    Texte.set('Résultat -> ' + str(nb)+","+str(nb2))

# Création d'un widget Button (bouton Lancer)
BoutonLancer = Button(fen, text ='Lancer', command = NouveauLance)

# Positionnement du widget avec la méthode pack()
BoutonLancer.pack(side = RIGHT, padx = 10, pady = 10)

# Création d'un widget Button (bouton Quitter)
BoutonQuitter = Button(fen, text ='Quitter', command = fen.destroy)
BoutonQuitter.pack(side = RIGHT, padx = 10, pady = 10)
Texte = StringVar()

# On appellle une fois la fonction pour initialiser notre Texte
NouveauLance()
# La fonction NouveauLance() sera ensuite appelée via le bouton "Lancer"

# Création d'un widget Label (texte 'Résultat -> x')
LabelResultat = Label(fen, textvariable = Texte, fg ='red', bg ='white')
LabelResultat.pack(side = RIGHT, padx = 10, pady = 10)

fen.mainloop()