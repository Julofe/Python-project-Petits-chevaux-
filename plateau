can=Canvas(fen,width=800,height=600,background='white')
can.pack()

#Plateau
Ecuriej=can.create_rectangle(5,5,210,210,fill="yellow")
Ecurier=can.create_rectangle(395,5,600,210,fill="red")
Ecuriev=can.create_rectangle(5,395,200,600,fill="green")
Ecurieb=can.create_rectangle(395,395,600,600,fill="blue")

